
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InserisciAmministratoreActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edittext_citta"
            android:hint="@string/citta"
            android:inputType="textCapWords"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edittext_gastronomia"
            android:hint="Punto gastronomico"
            android:inputType="textCapWords"/>
    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/gastonomia_immagine"
        android:layout_width="224dp"
        android:layout_height="242dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_image_black_24dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        />

    <ImageButton
        android:id="@+id/button_addPhotoGastonomia"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:background="#FAFAFA"
        android:src="@drawable/ic_add"
        android:tint="#000000"></ImageButton>

    <Button
        android:id="@+id/button_inserisci"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:hint="Inserisci"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
