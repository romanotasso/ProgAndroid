<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <EditText
        android:id="@+id/edittext_nome"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="45dp"
        android:gravity="center_horizontal"
        android:hint="@string/nome"
        android:importantForAutofill="no"
        android:inputType="textCapWords" />

    <EditText
        android:id="@+id/edittext_cognome"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:hint="@string/cognome"
        android:importantForAutofill="no"
        android:inputType="textCapWords" />

    <EditText
        android:id="@+id/edittext_email"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:hint="@string/email"
        android:importantForAutofill="no"
        android:inputType="textEmailAddress" />


    <EditText
        android:id="@+id/edittext_password1"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/edittext_data"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:hint="@string/data_nascita"
        android:importantForAutofill="no"
        android:inputType="date"
        android:focusable="false"/>

    <EditText
        android:id="@+id/edittext_citta"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:hint="@string/citta"
        android:importantForAutofill="no"
        android:inputType="textCapWords" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:id="@+id/radio">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="37dp"
            android:text="@string/sesso"
            android:textSize="20sp"/>

        <RadioButton
            android:id="@+id/uomo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/uomo"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:onClick="checkButton"
            tools:ignore="OnClick" />

        <RadioButton
            android:id="@+id/donna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:onClick="checkButton"
            android:text="@string/donna"
            android:textSize="20sp"
            tools:ignore="OnClick" />
    </RadioGroup>

    <Button
        android:id="@+id/button_register"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:hint="@string/regiatrati"
        android:onClick="onReg"/>


</LinearLayout>
